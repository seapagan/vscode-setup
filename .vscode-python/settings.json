{
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "autoDocstring.startOnNewLine": true,
  "beautify.language": {
    "html": ["htm", "html", "django-html"]
  },
  "cSpell.ignoreWords": ["myblog"],
  "cSpell.language": "en-GB",
  "editor.formatOnPaste": false,
  "emmet.includeLanguages": {
    "django-html": "html"
  },
  "emmet.triggerExpansionOnTab": true,
  "files.associations": {
    "**/*.html": "html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/templates/**/*": "django-txt",
    "**/templates/**/*.html": "django-html"
  },
  "files.eol": "\n",
  "files.exclude": {
    "**/__pycache__": true
  },
  "git.alwaysSignOff": true,
  "git.enableCommitSigning": true,
  "html.format.indentHandlebars": true,
  "html.format.templating": true,
  "python.analysis.extraPaths": [],
  "python.analysis.stubPath": "/home/seapagan/stubs",
  "python.formatting.blackArgs": ["--line-length=80"],
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.flake8Args": ["--max-line-length=80"],
  "python.linting.flake8Enabled": true,
  "python.linting.pydocstyleArgs": ["--convention=google"],
  "python.linting.pylintArgs": [
    "--load-plugins",
    "pylint_django",
    "--django-settings-module",
    "myblog.settings"
  ],
  "python.linting.pylintEnabled": true,
  "python.linting.pylintUseMinimalCheckers": false,
  "python.pythonPath": "/home/seapagan/.pyenv/versions/uprn/bin/python",
  "python.sortImports.args": ["--profile", "black", "--src=${workspaceFolder}"],
  "python.testing.nosetestsEnabled": false,
  "python.testing.promptToConfigure": false,
  "python.testing.pytestEnabled": false,
  "python.testing.unittestArgs": ["-v", "-s", "./tests", "-p", "*_test.py"],
  "python.testing.unittestEnabled": false,
  "testExplorer.addToEditorContextMenu": true,
  "cSpell.words": ["attrib", "Hashicorp", "Heroku"],
  "explorer.experimental.fileNesting.enabled": true,
  "explorer.experimental.fileNesting.expand": false,
  "explorer.experimental.fileNesting.patterns": {
    "requirements.txt": ".coveragerc, .env.example, tox.ini, .python-version, pytest.ini, .gitignore"
  },
  "grammarly.overrides": [
    {
      "files": ["**/README.md"],
      "config": {
        "audience": "general",
        "dialect": "british",
        "domain": "technical",
        "emotions": [],
        "goals": ["inform"]
      }
    }
  ],
  "cSpell.enableFiletypes": ["!css", "!django-html", "!python"]
}
